{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/atuona/dragontrade-agent"],
      "env": {}
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token_here"
      }
    },
    "coingecko_mcp": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.api.coingecko.com/sse"
      ],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "MCP_TIMEOUT": "45000",
        "MCP_RETRY_ATTEMPTS": "5",
        "MCP_RETRY_DELAY": "10000"
      }
    }
  },
  "timeout": 45000,
  "retryAttempts": 5,
  "retryDelay": 10000
}